<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:src="@drawable/unilink" />

    <TextView
        android:id="@+id/TextView1_dep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imageButton2"
        android:layout_below="@+id/imageButton2"
        android:layout_marginRight="19dp"
        android:layout_marginTop="23dp"
        android:text="Journey Planner"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageButton
        android:id="@+id/ImageButton03"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_alignLeft="@+id/ImageButton01"
        android:layout_alignTop="@+id/ImageButton02"
        android:scaleType="centerCrop"
        android:src="@drawable/bus2" />

    <TextView
        android:id="@+id/TextView1_arr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView1_dep"
        android:layout_alignBottom="@+id/TextView1_dep"
        android:layout_alignRight="@+id/ImageButton01"
        android:layout_marginRight="30dp"
        android:text="Navigate To..."
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/TextView1_walk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView1_time"
        android:layout_alignBottom="@+id/TextView1_time"
        android:layout_alignRight="@+id/TextView1_arr"
        android:layout_marginRight="17dp"
        android:text="Settings"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/TextView1_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/TextView1_dep"
        android:layout_below="@+id/ImageButton03"
        android:layout_marginTop="26dp"
        android:text="View Routes"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageButton
        android:id="@+id/ImageButton01"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="36dp"
        android:layout_toRightOf="@+id/imageButton2"
        android:scaleType="centerCrop"
        android:src="@drawable/bus2" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/ImageButton01"
        android:layout_marginLeft="95dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bus2" />

    <ImageButton
        android:id="@+id/ImageButton02"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ImageButton01"
        android:scaleType="centerCrop"
        android:src="@drawable/bus2" />

</RelativeLayout>